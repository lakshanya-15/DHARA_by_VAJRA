# Server
PORT=3000
NODE_ENV=development

# Database (same as dharaa - PostgreSQL)
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# CORS - allow frontend origin (comma-separated), or leave unset to allow all (*)
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT - use strong random string in production (e.g. openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
